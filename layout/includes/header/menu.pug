.nav-menu
  .container
    nav.navbar-menu
      ul.menu-list
        each value, label in theme.menu
          if typeof value !== 'object'
            - const valueArray = value.split('||')
              li.menu-item
                a.menu-link(href=url_for(trim(valueArray[0])))
                  if valueArray[1]
                    i.fa-fw(class=trim(valueArray[1]))
                  span=' '+label
          else
            - const labelArray = label.split('||')
            li.menu-item.menu-item-children
              a.menu-link(href='javascript:void(0);')
                if labelArray[1]
                  i.fa-fw(class=trim(labelArray[1]))
                span=' '+ trim(labelArray[0])
                .menu-dropdown-icon
                  svg(viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                    path(d='M6 9l6 6l6-6' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
              .menu-dropdown
                ul.menu-list.menu-list-nested
                  each val, lab in value
                    - const valArray = val.split('||')
                    li.menu-item.menu-item-no-children
                      a.menu-link(href=url_for(trim(valArray[0])))
                        if valArray[1]
                          i.fa-fw(class=trim(valArray[1]))
                        span=' '+lab