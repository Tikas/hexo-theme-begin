@keyframes progress
  0%
    stroke-dashoffset: -75
    opacity: 1
  95%
    stroke-dashoffset: 0
    opacity: 1
  100%
    opacity: 0
    stroke-dashoffset: 0

#swiper
  width: 100vw
  height: 100vh
  max-width: 100%

.swiper-container
  width: 100%
  height: 100%
  position: relative

.swiper-slide
  display: flex
  justify-content: center
  align-items: center
  background-color: #eee
  position: relative
  overflow: hidden

.swiper-img
  position: absolute
  top: 50%
  left: 50%
  display: block
  min-width: 100%
  min-height: 100%
  transform: translate(-50%, -50%)

.introduce
  position: absolute

.swiper-pagination
  position: absolute
  bottom: 1rem

.swiper-pagination-bullet
  background-color: transparent
  opacity: 0.7

.swiper-pagination-svg-animation
  width: 26px
  height: 26px
  margin: 0 6px !important
  display: inline-block
  svg
    -webkit-transform: rotate(-90deg)
    -moz-transform: rotate(-90deg)
    -ms-transform: rotate(-90deg)
    -o-transform: rotate(-90deg)
    transform: rotate(-90deg)
  .svg__circle-inner
    stroke: #000;
    fill: transparent;
    -webkit-transition: all 0.5s ease
    -moz-transition: all 0.5s ease
    -ms-transition: all 0.5s ease
    -o-transition: all 0.5s ease
    transition: all 0.5s ease

.swiper-pagination-bullet-active
  .svg__circle
    stroke: #000
    stroke-dasharray: 75
    stroke-dashoffset: 0
    -webkit-animation: progress 8s ease-in-out 1 forwards
    -moz-animation: progress 8s ease-in-out 1 forwards
    -ms-animation: progress 8s ease-in-out 1 forwards
    animation: progress 8s ease-in-out 1 forwards
  .svg__circle-inner
    fill: #000

.font-white
  color: #fff

.introduce-title
  font-size: 60px
  font-weight: 700
  margin: 0

.introduce-subtitle
  font-size: 34px
  margin: 0